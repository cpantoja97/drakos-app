/**
 * Represents a client that hires or has hired Drako's services
 */
model Client {
  /**
   * Autogenerated UUID
   */
  id             String         @id @default(uuid())
  /**
   * National ID type in case they are not other companies
   */
  nationalIdType NationalIdType
  /**
   * National ID
   */
  nationalId     String         @unique
  /**
   * Client name -> might need to split if supporting normal people as clients
   */
  name           String
  /**
   * Created at (autogenerated)
   */
  createdAt      DateTime       @default(now())
  /**
   * Updated at (autogenerated)
   */
  updatedAt      DateTime       @updatedAt
}

// Define an Enum for ID types
enum NationalIdType {
  CC
  NIT
}
